@model IEnumerable<ProjektCRUD20510.Models.Class>

@{
    ViewData["Title"] = "Index Page Uzytkownik";
}
@if (User.IsInRole("Admin"))
{
    <h1>Użytkownicy</h1>
}
@if (User.IsInRole("User"))
{
    <h1>Profil</h1>
}

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary btn-sm">Dodaj użytkownika</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Hasło
            </th>
            <th>
                Rola
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nazwa
                </td>
                <td>
                    @item.Haslo
                </td>
                <td>
                    @(item.Role ? "Admin" : "Normal")
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Szczegoły</a> |

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edytuj</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>