@model ProjektCRUD20510.Models.ViewModels.FiszkiSetupViewModel

@{
    ViewData["Title"] = "Konfiguracja Fiszek";
}

<div class="container">
    <h1 class="mb-4">Fiszka</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="FiszkiSetup" asp-controller="Home" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label class="form-label">Liczba fiszek</label>
                    <input type="number" asp-for="NumberOfFiszki" class="form-control" min="1" required />
                    <span asp-validation-for="NumberOfFiszki" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Kierunek</label>
                    <select asp-for="Direction" class="form-control" required>
                        <option value="EngToPol">Angielski -> Polski</option>
                        <option value="PolToEng">Polski -> Angielski</option>
                    </select>
                    <span asp-validation-for="Direction" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Rozpocznij" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Powrót</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}