@model ProjektCRUD20510.Models.Testy

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Testy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NazwaTestu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NazwaTestu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategoria.Nazwa)
        </dd>
        <dt class="col-sm-2">
            Przypisane fiszki
        </dt>
        <dd class="col-sm-10">
            @if (Model.Testy_Fiszki != null && Model.Testy_Fiszki.Any())
            {
                <ul>
                    @foreach (var tf in Model.Testy_Fiszki)
                    {
                        <li>@tf.Fiszka?.Nazwa_PL - @tf.Fiszka?.Nazwa_ENGLISH</li>
                    }
                </ul>
            }
            else
            {
                <p>No flashcards assigned.</p>
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-controller="Testy" asp-route-id="@Model?.Id">Edytuj</a>
        <span> | </span>
    }
    <a asp-action="Index" asp-controller="Testy">Powrót</a>
</div>