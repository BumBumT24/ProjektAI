@model IEnumerable<ProjektCRUD20510.Models.Testy>

@{
    ViewData["Title"] = "Index";
}

<h1>Testy</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" asp-controller="Testy">Dodaj test</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazwaTestu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NazwaTestu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategoria.Nazwa)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-controller="Testy" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edytuj</a>
                        <span> | </span>
                    }
                    <a asp-action="Details" asp-controller="Testy" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Szczegóły</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <span> | </span>
                        <a asp-action="Delete" asp-controller="Testy" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Usuń</a>
                    }
                    <span> | </span>
                    <a asp-action="TakeTest" asp-controller="Testy" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Zacznij test</a>
                </td>
            </tr>
        }
    </tbody>
</table>