@model ProjektCRUD20510.Models.Fiszki

@{
    ViewData["Title"] = "Edit Flashcard";
}

<div class="container">
    <h1 class="mb-4">Edytuj fiszke</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" asp-controller="Fiszki" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Id_Uzytkownika" />
                <div class="form-group mb-3">
                    <label asp-for="Nazwa_PL" class="form-label">Polskie Słowo</label>
                    <input asp-for="Nazwa_PL" class="form-control" required />
                    <span asp-validation-for="Nazwa_PL" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Nazwa_ENGLISH" class="form-label">Angielskie Słowo</label>
                    <input asp-for="Nazwa_ENGLISH" class="form-control" required />
                    <span asp-validation-for="Nazwa_ENGLISH" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Fiszki" class="btn btn-secondary">Powrót</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}