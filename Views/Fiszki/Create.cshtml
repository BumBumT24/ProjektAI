@model ProjektCRUD20510.Models.Fiszki

@{
    ViewData["Title"] = "Create Flashcard";
}

<div class="container">
    <h1 class="mb-4">Dodaj fiszke</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" asp-controller="Fiszki" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Nazwa_PL" class="form-label">Polish Word</label>
                    <input asp-for="Nazwa_PL" class="form-control" required />
                    <span asp-validation-for="Nazwa_PL" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Nazwa_ENGLISH" class="form-label">English Word</label>
                    <input asp-for="Nazwa_ENGLISH" class="form-control" required />
                    <span asp-validation-for="Nazwa_ENGLISH" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" asp-controller="Fiszki" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').on('submit', function () {
                console.log('Form submitted!');
            });
            // Bootstrap validation
            (function () {
                'use strict';
                var forms = document.querySelectorAll('.needs-validation');
                Array.prototype.slice.call(forms).forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            })();
        });
    </script>
}