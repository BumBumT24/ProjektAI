@model IEnumerable<ProjektCRUD20510.Models.Wynik>

@{
    ViewData["Title"] = "Index";
}

<h1>Wyniki</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" asp-controller="Wynik" class="btn btn-primary btn-sm">Dodaj wynik</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.wynik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Test)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uzytkownik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.wynik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Test.NazwaTestu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uzytkownik.Nazwa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategoria.Nazwa)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Wynik" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Szczegoły</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <span> | </span>
                        <a asp-action="Edit" asp-controller="Wynik" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edytuj</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-controller="Wynik" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Usuń</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>